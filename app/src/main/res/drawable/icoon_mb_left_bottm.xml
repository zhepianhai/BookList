    <solid android:color="@color/colorBlue" /> <!-- 定义填充的颜色值 -->
    <!-- 描边 -->  
    <stroke  
        android:width="@dimen/x1"
        android:color="@color/colorBlue" /> <!-- 定义描边的宽度和描边的颜色值 -->
