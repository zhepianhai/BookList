    <corners  
        android:bottomLeftRadius="@dimen/x5"
        android:bottomRightRadius="0dp"  
        android:topLeftRadius="@dimen/x5"
        android:topRightRadius="0dp" />
    <!-- 设置四个角的半径 -->
      
</shape>
